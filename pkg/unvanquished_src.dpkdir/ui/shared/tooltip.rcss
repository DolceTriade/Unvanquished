tooltip {
    background-color: #333;
    border-radius: 10px;
    padding: 10px 15px;
    position: fixed;
    margin: 15px;
    text-align: center;
    display: none;
    z-index: 999;
    opacity: 0;
    transition: opacity 0.25s linear-in;
}
parent {
    display: block;
}
parent:hover > tooltip {
    display: block;
    opacity: 1;
}
